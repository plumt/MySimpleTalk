<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="itemChat"
            type="com.yun.mysimpletalk.data.model.ChatModel.Chatting" />

        <variable
            name="chatListener"
            type="com.yun.mysimpletalk.base.BaseRecyclerAdapter.OnItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_profile"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_979797"
            android:visibility="@{itemChat.name.equals(``) ? View.GONE : itemChat.skip[0] ? View.INVISIBLE : View.VISIBLE}"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:visibility="@{itemChat.name.equals(``) ? View.GONE : itemChat.skip[0] ? View.GONE : View.VISIBLE}"
                android:id="@+id/iv_profile"
                setImages="@{itemChat.profile}"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_you"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:visibility="@{itemChat.name.equals(``) ? View.GONE : View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="@id/gl_80"
            app:layout_constraintStart_toEndOf="@id/cv_profile"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{itemChat.name}"
                android:textColor="@color/color_534713"
                android:textSize="12sp"
                android:visibility="@{itemChat.skip[0] ? View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_534713"
                android:minWidth="30dp"
                android:minHeight="35dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_friend_name">

                <TextView
                    android:id="@+id/tv_friend_message"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="@{itemChat.message}"
                    android:textColor="@color/white" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_you_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{itemChat.dateConvert(itemChat.timestamp)}"
                android:textSize="10sp"
                android:visibility="@{itemChat.skip[1] ? View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toStartOf="@id/cv_you"
                app:layout_constraintTop_toBottomOf="@id/cv_you" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="@{itemChat.name.equals(``) ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/gl_20"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_FBA53B"
                android:minWidth="30dp"
                android:minHeight="35dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_my_message"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="@{itemChat.message}"
                    android:textColor="@color/black" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_my_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{itemChat.dateConvert(itemChat.timestamp)}"
                android:textSize="10sp"
                android:visibility="@{itemChat.skip[1] ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="@id/cv_me"
                app:layout_constraintTop_toBottomOf="@id/cv_me" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>